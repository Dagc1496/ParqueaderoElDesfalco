<?xml version="1.0" encoding="UTF-8" ?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:orientation = "vertical"
    android:gravity="center">

        <ImageView
        android:id="@+id/vehicle_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/motorcycle_id_entry"
            android:hint="poner pista"
            android:inputType="textPersonName"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:maxLength="20"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/motorcycle_cilindraje_entry"
            android:hint="poner pista"
            android:inputType="number"
            android:layout_margin="30dp"
            android:gravity="center"
            android:maxLength="5"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Moto"
            android:id="@+id/btn_park_motorcycle"
            android:backgroundTint="@color/buttonsColor"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/buttons_shape_corners"
            android:layout_marginHorizontal="60dp"/>

</LinearLayout>